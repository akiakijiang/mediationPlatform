/*下面是地图样式的特有样式*/
.map-view{
  width: 100%;
  height:100%;
}
.map{
  width:100%;
  height:1000rpx;
}
page{
  height: 100%;
}
.needle-wrap{
  position:fixed;top:50%;left:50%
}
.needle{
  height:50rpx;width:50rpx
}
/*下面是覆盖掉的样式*/
.img {
  /*border-radius: 50%;*/
  height: 100%;
  width: 100%;
}

.wrap-img {
  height: 150rpx;
  width: 150rpx;
  
}

.item {
  font-size: 34rpx;
  padding: 10rpx 10rpx 10rpx 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.near-item {
  font-size: 34rpx;
  padding: 10rpx 10rpx 10rpx 0rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-desc {
  margin-left: 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  width: 500rpx;
  padding-bottom:10rpx;
  border-bottom:2rpx solid #eeeeee;

}

.item-desc-each {
  width: 100%;
  display: flex
  
}

.img-fontP {
  display: flex;
  align-items: flex-start;
  flex-wrap: nowrap;
}

.location-font {
  display: flex;
  align-items: baseline;
  margin-top: 16rpx;
  
}

.index-logo {
  
  width: 100%;
}


.index-hd {
  text-align: center;
}


.index-desc {
  margin-top: 20rpx;
  color: #888888;
  font-size: 28rpx;
}
.wrap-item{
  margin-top:27rpx;
  margin-bottom: 27rpx;
}
.item-desc-each-each{
  color:#333333;
  
}
/*超出内容后显示省略号*/
.cont{
  overflow: hidden;/*内容超出后隐藏*/
  text-overflow: ellipsis;/* 超出内容显示为省略号*/
  white-space: nowrap;/*文本不进行换行*/
}

.search-header{
  position: fixed;
  top: 0;
  width: 750rpx;
  height: 91rpx;
  display: flex;
  background: #fff;
  border-bottom: 1px solid rgba(0,0,0,.15);
  padding: 0 31.25rpx;
  font-size: 29rpx;
  color: #333;
  align-items:center;
}

.search-header .input-box{
  position: relative;
  margin-top: 16rpx;
  float: left;
  width: 0;
  flex: 1;
  height: 59rpx;
  line-height: 59rpx;
  padding: 0 20rpx;
  background: #f4f4f4;
}

.search-header .icon{
  position: absolute;
  top: 14rpx;
  left: 20rpx;
  width: 31rpx;
  height: 31rpx;
}

.search-header .del{
  position: absolute;
  top: 3rpx;
  right: 10rpx;
  width: 53rpx;
  height: 53rpx;
  z-index: 10;
}

.search-header .keywrod{
  position: absolute;
  top: 0;
  left: 40rpx;
  width: 506rpx;
  height: 59rpx;
  padding-left: 30rpx;
}

.search-header .right{
  margin-top: 24rpx;
  margin-left: 31rpx;
  margin-right: 6rpx;
  width: 58rpx;
  height: 43rpx;
  line-height: 43rpx;
  float: right;
}

.search-header .icon {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png) center no-repeat;
  background-size: 100%;
  width: 28rpx;
  height: 28rpx;
  left:10px;
  position:absolute;
}

.search-header .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 10rpx;
  font-size: 30rpx;
}
.search-header .type-icon{
  height: 36rpx;
  width: 36rpx;
  margin-right: 15rpx;
}