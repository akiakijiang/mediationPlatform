/* pages/shop/shopInfo.wxss */
@import "/lib/weui.wxss";

.tab-h{
    background-color: #ffffff !important;
    height: 180rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: #F7F7F7; font-size: 16px; white-space: nowrap;
    /* position: fixed; */
    top: 0; left: 0; z-index: 99;
    margin:30rpx 20rpx;
}
.tab-item{margin:0 36rpx;display: inline-block;}
.tab-item.active{color: #59cafa;position: relative;}
.tab-item.active:after{ content: "";display: block;height: 8rpx;width: 100%;background: #59cafa;position: absolute; bottom: 0;left: 5rpx;border-radius: 16rpx;}
.stepNum{
  background-color: #ffffff;
  color: black;
  border-radius: 50%;
  border: 1px solid #bfbfbf;
  text-align: center;
  width:70rpx;
  height:70rpx;
  line-height: 70rpx;
  margin:0 auto;
}
.stepNum.active{
  background-color: #59cafa;
  color: #ffffff;
  border: 1px solid #59cafa;
}
.shopInfoPaddingZero{
  padding: 0;
}

.item-ans{ width: 100%;display: flex; flex-grow: row no-wrap;justify-content: space-between; padding: 30rpx 30rpx 10rpx 30rpx;box-sizing: border-box; height: 120rpx;align-items: center;border-bottom: 1px solid #F2F2F2;}
.avatar{width: 100rpx;height: 100rpx;position: relative;padding-right: 30rpx;}
.avatar .img{width: 100%;height: 100%;}
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 12px;flex-grow: 2;color: #B0B0B0;line-height: 1.5em;}
.expertInfo .name{font-size: 16px;color:#000;margin-bottom: 6px;}
.askBtn{ width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 14px; border-radius: 60rpx;border: 1px solid #4675F9; color:#4675F9;}
/* .tab-content{margin-top: 20rpx;} */
.scoll-h{height: 100%;}

.page-section{
    margin-bottom: 20rpx;
}
.intro {
  margin: 30px;
  text-align: center;
}
  
.input-title{
  margin-right: 5px;
  font-size: 18px;
}
.weui-input{
  margin-left: 15px;
}
.input-text{
  margin-left:15px;
  margin-right: 5px;
}
.pickeTitle{
    margin-right: 20px;
    font-size: 18px;
}
.weui-input,.picker{
    font-size: 18px;
}
.shopInfoUploadBtn{
  border-radius: 10px;
  width: 130px;
  height: 100px;
}
.weui-uploader__file{
  width: 96%;
  height: 250px;
}
.weui-uploader__img{
  width: 100%;
  height: 210px;
}
.shopInfoUploadInput{
  border:1px solid #bfbfbf;
  font-size: 18px;
  height: 40px;
}
.addTeacherBtn{
  background-color: #59cafa;
  border-radius: 25px;
  width: 100px;
  margin-left: 15px;
  font-size: 15px;
  color: #ffffff;
}
.teacherInfoDiv{
  border:1px solid #bfbfbf;
  padding: 15px;
  margin-top: 20rpx;
}
.evaluate-section{
  /* margin: 5%; */
}
.evaluate-title{
  color: black;
  font-size: 18px;
  padding-left: 0px;
}
.teacherInfo .item-ans{
  padding-left: 0px;
}
.clear-icon{
  position: relative;
  top:-55rpx;
  right:-55rpx;
  width:50rpx;
  height:50rpx;
  float: right;
}
.shopImgDiv{
  width: 100%;
  /* height: 105px; */
}

.teacherImgDiv .weui-uploader__file{
  width: 40%;
  height: 100px;
}
.shopImgDiv .weui-uploader__img,.teacherImgDiv .weui-uploader__img{
  width: 100%;
  height: 105px;
}
.weui-cells:before {
  border:none !important;
}
.shopImgDiv .clear-icon,.shopMainImgDiv .clear-icon,.envDiv .clear-icon{
  top:24rpx;
  right:-24rpx;
}

.shopInfoTopTips{
  background-color: #f2f2f2;
  color: red;
  text-align: center;
  padding: 5px;
  font-size: 14px;
}

.skip{
  color: #459ad0;
  text-align:center;
  margin:0 auto;
  margin-top: 20px;
  margin-bottom: 20px;
}
.placeholderStyle{
  color: #888888 !important;
