/**index.wxss**/
@import "/lib/weui.wxss";

.commentNo{
  text-align: center;
}
.container{
  padding:10rpx 0;
}
.myCommentNoImg{
  width: 80px;
  height: 80px;
  margin: 20px 0px;
}

.star-image {
  /* position: absolute; */
  top: 50rpx;
  width: 35rpx;
  height: 35rpx;
  src: "/images/star-full.png";
}

.item {
  /* position: absolute; */
  top: 50rpx;
  width: 75rpx;
  height: 50rpx;
}
.myCommentList{
  border-bottom: 1px solid #eeeeee;
  margin: 20px;
}
.tab-h{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 180rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 60rpx;
  background: #F7F7F7; 
  font-size: 16px; 
  position: fixed;
  top: 0; 
  left: 0; 
  z-index: 99;
  background-color:#ffffff;
}
.tab-item{margin:10rpx 35rpx;display: inline-block;width:180rpx;text-align:center;border:1px solid #bfbfbf;border-radius: 40rpx;}
.tab-item.active{color: #4675F9;position: relative;width:180rpx;text-align:center;border:1px solid #4675F9;border-radius: 40rpx;}
/* .tab-item.active:after{ content: "";display: block;height: 8rpx;width: 52rpx;background: #4675F9;position: absolute; bottom: 0;left: 5rpx;border-radius: 16rpx;} */
.item-ans{ width: 100%;display: flex; flex-grow: row no-wrap;justify-content: space-between; padding: 30rpx;box-sizing: border-box; height: 230rpx;align-items: center;border-bottom: 1px solid #F2F2F2;}
.avatar{width: 100rpx;height: 100rpx;position: relative;}
.avatar .img{width: 100%;height: 100%;border-radius: 50%;}
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 12px;flex-grow: 2;color: #B0B0B0;line-height: 1.5em;margin-left: 30rpx;}
.expertInfo .name{font-size: 16px;color:#000;margin-bottom: 6px;}
.expertInfo .date{font-size: 16px;color:#999999;margin:0 0 6px 130px;right:0;}
.expertInfo .tag{width: 90%;}
.askBtn{ width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 14px; border-radius: 60rpx;border: 1px solid #4675F9; color:#4675F9;}
.tab-content{margin-top: 180rpx;}
.scoll-h{height: 100%;}

.page-section{
  margin-bottom: 20rpx;
}
.intro {
  margin: 30px;
  text-align: center;
}

.input-title{
  margin-right: 5px;
  width: 20%;
}
.weui-input{
  margin-left: 15px;
}
.input-text{
  margin-left:15px;
  margin-right: 5px;
}
.myInfoBtn{
  margin-top: 80px;
  background-color: #59cafa;
  border-radius: 25px;
  width: 200px;
  color: #ffffff;
}